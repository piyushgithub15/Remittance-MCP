{
  "openapi": "3.0.0",
  "info": {
    "title": "Remittance MCP API",
    "description": "API for international remittance operations with MCP integration",
    "version": "1.0.0",
    "contact": {
      "name": "Remittance API Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8070"
    }
  ],
  "paths": {
    "/api/query-exchange-rate": {
      "post": {
        "operationId": "queryExchangeRate",
        "summary": "Query exchange rate",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["toCountry", "toCurrency"],
                "properties": {
                  "toCountry": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}$"
                  },
                  "toCurrency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Invalid parameters"
          }
        }
      }
    },
    "/api/transfer-money": {
      "post": {
        "operationId": "transferMoney",
        "summary": "Transfer money",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["lastFourDigits", "expiryDate", "beneficiaryId", "beneficiaryName", "sendAmount"],
                "properties": {
                  "beneficiaryId": {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                  },
                  "beneficiaryName": {
                    "type": "string"
                  },
                  "sendAmount": {
                    "type": "number",
                    "minimum": 0.01
                  },
                  "lastFourDigits": {
                    "type": "string",
                    "pattern": "^\\d{4}$"
                  },
                  "expiryDate": {
                    "type": "string",
                    "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Verification failed"
          }
        }
      }
    },
    "/api/get-beneficiaries": {
      "post": {
        "operationId": "getBeneficiaries",
        "summary": "Get beneficiaries",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["lastFourDigits", "expiryDate"],
                "properties": {
                  "country": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}$"
                  },
                  "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                  },
                  "transferMode": {
                    "type": "string",
                    "enum": ["BANK_TRANSFER", "CASH_PICK_UP", "MOBILE_WALLET", "UPI"]
                  },
                  "isActive": {
                    "type": "boolean",
                    "default": true
                  },
                  "limit": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 50
                  },
                  "lastFourDigits": {
                    "type": "string",
                    "pattern": "^\\d{4}$"
                  },
                  "expiryDate": {
                    "type": "string",
                    "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Verification failed"
          }
        }
      }
    },
    "/api/transaction-query": {
      "post": {
        "operationId": "queryTransactions",
        "summary": "Query transactions",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["lastFourDigits", "expiryDate"],
                "properties": {
                  "orderNo": {
                    "type": "string"
                  },
                  "transferMode": {
                    "type": "string",
                    "enum": ["BANK_TRANSFER", "CASH_PICK_UP", "MOBILE_WALLET", "UPI"]
                  },
                  "country": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}$"
                  },
                  "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$"
                  },
                  "orderDate": {
                    "type": "string",
                    "format": "date"
                  },
                  "orderCount": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 50,
                    "default": 10
                  },
                  "includeDelayInfo": {
                    "type": "boolean",
                    "default": false
                  },
                  "lastFourDigits": {
                    "type": "string",
                    "pattern": "^\\d{4}$"
                  },
                  "expiryDate": {
                    "type": "string",
                    "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Verification failed"
          }
        }
      }
    },
    "/api/refresh-status": {
      "post": {
        "operationId": "refreshStatus",
        "summary": "Refresh transaction status",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["orderNo", "lastFourDigits", "expiryDate"],
                "properties": {
                  "orderNo": {
                    "type": "string"
                  },
                  "lastFourDigits": {
                    "type": "string",
                    "pattern": "^\\d{4}$"
                  },
                  "expiryDate": {
                    "type": "string",
                    "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Verification failed"
          }
        }
      }
    }
  }
}